        <% } %>
    </div>
    <div class="form-group">
        <label for="birthDate">Data de Nascimento</label>
        <input type="date" class="form-control" name="birthDate" autocomplete="off">
        <% if (alert.length >0) { %>
        <% alert.forEach(e => { %>
        <% if (e.param == 'birthDate') { %>
        <%- e.msg %>
        <% } %>
        <% }) %>
        <% } %>
    </div>
